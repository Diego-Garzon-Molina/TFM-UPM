<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"


    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:textSize="20sp"
        android:gravity="center_vertical"

        android:id="@+id/nombreMedicina"
        android:textColor="#f79168"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="20sp"
       android:gravity="center_vertical"
        android:text=""
        android:textColor="#fb5527"

        android:id="@+id/principioActivo"

    />

    </LinearLayout>
    <Button
        android:id="@+id/bBorrarMedicina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X" />


    <!-- Divisor del ListView extraido de:
          https://danielme.com/tip-android-23-disenar-el-separador-de-filas-de-listview/-->

</LinearLayout>
<LinearLayout
android:layout_width="match_parent"
android:layout_height="3px"
android:background="@drawable/list_divider"/>
    </LinearLayout>