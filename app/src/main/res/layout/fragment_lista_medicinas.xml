<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="8dp"
    android:id="@+id/fragmentoListaMedicinas"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    tools:context="com.example.diego.baymax.MainActivity"
    android:background="#ffffff"
    >

    <ListView
        android:id="@+id/lista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_weight="0.43"


        android:divider="@drawable/list_divider">
        <!-- Divisor del ListView extraido de:
          https://danielme.com/tip-android-23-disenar-el-separador-de-filas-de-listview/-->
    </ListView>
    <Button
        android:id="@+id/bNuevaMedicina"
        android:layout_width="123dp"

        android:layout_height="wrap_content"
        android:text="Nueva medicina" />
</LinearLayout>